---
import BaseLayout from "../layouts/BaseLayout.astro";
import { getDesc, getTitle } from "../utils";
---

<BaseLayout title={getTitle("404")} description={getDesc("The 404 Page")}>
    <main class="h-full w-full flex flex-col items-center justify-center">
        <div class="text-8xl font-mono font-bold text-accent">404</div>
        <div class="mt-4 text-xl text-secondary">Page Not Found</div>
        <a href="/" class="mt-6 px-4 py-2 bg-accent text-back rounded-lg font-mono hover:bg-accent-hover transition-colors">Go Home</a>
    </main>
</BaseLayout>

